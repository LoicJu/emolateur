
num Nombre = 40
str Texte = "ceci est du texte"
bool Boolean = True

str TexteVrai = "Texte si c'est vrai"
str TexteFaux = "Texte si c'est faux"


# montre le fonctionnement de la boucle while
while(Nombre<100){
	Nombre = Nombre+10
	print Nombre
}


for Nombre in 0, 10, 2
{
	print Nombre
}

if Nombre < 20
{
	print TexteVrai
}

if Nombre > 20
{
	print TexteVrai
}
else
{
	print TexteFaux
}

if Boolean
{
	print TexteVrai
}

Boolean = False

if Boolean
{
	print TexteVrai
}
else
{
	print TexteFaux
}